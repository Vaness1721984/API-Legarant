{
	"info": {
		"_postman_id": "a2b1790d-6b13-4940-8a9b-a0c99695c190",
		"name": "Account Integration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Security Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson = pm.response.json();\r",
							"pm.environment.set('Token', responseJson.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://login.salesforce.com/services/oauth2/token?username={{username}}&password={{password}}&grant_type={{grant_type}}&client_id={{client_id}}&client_secret={{client_secret}}",
					"protocol": "https",
					"host": [
						"login",
						"salesforce",
						"com"
					],
					"path": [
						"services",
						"oauth2",
						"token"
					],
					"query": [
						{
							"key": "username",
							"value": "{{username}}"
						},
						{
							"key": "password",
							"value": "{{password}}"
						},
						{
							"key": "grant_type",
							"value": "{{grant_type}}"
						},
						{
							"key": "client_id",
							"value": "{{client_id}}"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}"
						}
					]
				}
			},
			"response": []
		},
